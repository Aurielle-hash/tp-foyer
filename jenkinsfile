pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                
                checkout([$class: 'GitSCM',
                          branches: [[name: '*/maissa']], 
                          userRemoteConfigs: [[url: 'https://github.com/Aurielle-hash/tp-foyer.git']] 
                ])
            }
        }
        stage('Maven Build') {
            steps {
               
                sh 'mvn clean compile'
            }
        }
    }

    post {
        always {
            cleanWs() 
        }
    }
}
